{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "serviceworker": true
  },
  "extends": ["standard", "plugin:react/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": { "react/react-in-jsx-scope": "off" },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
